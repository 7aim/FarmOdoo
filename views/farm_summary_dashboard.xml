<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Farm Summary Dashboard -->
    <record id="view_farm_summary_dashboard_kanban" model="ir.ui.view">
        <field name="name">farm.summary.dashboard.kanban</field>
        <field name="model">farm.financial.summary</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" create="false" edit="false">
                <field name="period_name"/>
                <field name="total_cost"/>
                <field name="operational_cost"/>
                <field name="worker_payment_cost"/>
                <field name="purchase_cost"/>
                <field name="additional_expense_cost"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="container o_kanban_card_content">
                            <div class="row">
                                <div class="col-6 o_kanban_primary_left">
                                    <div class="o_primary">
                                        <span><t t-esc="record.period_name.value"/></span>
                                    </div>
                                </div>
                                <div class="col-6 o_kanban_primary_right">
                                    <div class="mb4">
                                        <field name="total_cost" widget="monetary"/>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="o_kanban_record_subtitle">
                                        Əməliyyat: <field name="operational_cost" widget="monetary"/><br/>
                                        İşçi Ödəniş: <field name="worker_payment_cost" widget="monetary"/><br/>
                                        Satınalma: <field name="purchase_cost" widget="monetary"/><br/>
                                        Əlavə Xərc: <field name="additional_expense_cost" widget="monetary"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Simple Dashboard Action -->
    <record id="action_farm_summary_dashboard" model="ir.actions.act_window">
        <field name="name">Maliyyə Dashboard</field>
        <field name="res_model">farm.financial.summary</field>
        <field name="view_mode">kanban,list,pivot,graph</field>
        <field name="view_id" ref="view_farm_summary_dashboard_kanban"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Maliyyə Dashboard
            </p>
            <p>
                Bu dashboard-da aylıq maliyyə xülasəsini görə bilərsiniz.
            </p>
        </field>
    </record>

</odoo>
