<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Traktor Xərclər Action -->
        <record id="action_farm_tractor_expense" model="ir.actions.act_window">
            <field name="name">Traktor Xərclər</field>
            <field name="res_model">farm.tractor.expense</field>
            <field name="view_mode">list,form,pivot</field>
        </record>

        <!-- Traktor Xərclər List View -->
        <record id="view_farm_tractor_expense_list" model="ir.ui.view">
            <field name="name">farm.tractor.expense.list</field>
            <field name="model">farm.tractor.expense</field>
            <field name="arch" type="xml">
                <list string="Traktor Xərclər">
                    <field name="expense_date"/>
                    <field name="name"/>
                    <field name="tractor_name"/>
                    <field name="expense_type"/>
                    <field name="amount" sum="Cəm"/>
                </list>
            </field>
        </record>

        <!-- Traktor Xərclər Form View -->
        <record id="view_farm_tractor_expense_form" model="ir.ui.view">
            <field name="name">farm.tractor.expense.form</field>
            <field name="model">farm.tractor.expense</field>
            <field name="arch" type="xml">
                <form string="Traktor Xərc">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="expense_date"/>
                                <field name="tractor_name"/>
                            </group>
                            <group>
                                <field name="expense_type"/>
                                <field name="amount"/>
                            </group>
                        </group>
                        <group>
                            <field name="note" placeholder="Əlavə qeydlər..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Traktor Xərclər Pivot View -->
        <record id="view_farm_tractor_expense_pivot" model="ir.ui.view">
            <field name="name">farm.tractor.expense.pivot</field>
            <field name="model">farm.tractor.expense</field>
            <field name="arch" type="xml">
                <pivot string="Traktor Xərclər Pivot">
                    <field name="expense_date" type="row"/>
                    <field name="tractor_name" type="row"/>
                    <field name="expense_type" type="row"/>
                    <field name="amount" type="measure"/>
                </pivot>
            </field>
        </record>

    </data>
</odoo>
