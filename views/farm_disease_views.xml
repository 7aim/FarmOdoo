<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Xəstəlik Tipi list View -->
    <record id="farm_disease_type_list_view" model="ir.ui.view">
        <field name="name">farm.disease.type.list</field>
        <field name="model">farm.disease.type</field>
        <field name="arch" type="xml">
            <list string="Xəstəlik Növləri">
                <field name="code"/>
                <field name="name"/>
                <field name="category"/>
                <field name="pest_type"/>
                <field name="disease_type"/>
            </list>
        </field>
    </record>

    <!-- Xəstəlik Tipi Form View -->
    <record id="farm_disease_type_form_view" model="ir.ui.view">
        <field name="name">farm.disease.type.form</field>
        <field name="model">farm.disease.type</field>
        <field name="arch" type="xml">
            <form string="Xəstəlik Tipi">
                <sheet>
                    <group>
                        <group string="Əsas Məlumatlar">
                            <field name="name" placeholder="Xəstəlik Adı"/>
                            <field name="code"/>
                            <field name="category"/>
                            <field name="pest_type" invisible="category != 'pest'"/>
                            <field name="disease_type" invisible="category != 'disease'"/>
                        </group>
                    </group>
                    <group string="Açıqlama">
                        <field name="description" placeholder="Xəstəlik/Zərərverici haqqında qeydler..." nolabel="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Xəstəlik Qeydi list View -->
    <record id="farm_disease_record_list_view" model="ir.ui.view">
        <field name="name">farm.disease.record.list</field>
        <field name="model">farm.disease.record</field>
        <field name="arch" type="xml">
            <list string="Xəstəlik Qeydləri">
                <field name="name"/>
                <field name="tree_id"/>
                <field name="field_id"/>
                <field name="parcel_id"/>
                <field name="disease_type_id"/>
                <field name="damage_level"/>
                <field name="detection_date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Xəstəlik Qeydi Form View -->
    <record id="farm_disease_record_form_view" model="ir.ui.view">
        <field name="name">farm.disease.record.form</field>
        <field name="model">farm.disease.record</field>
        <field name="arch" type="xml">
            <form string="Xəstəlik Qeydi">
                <header>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group string="Ağac Məlumatları">
                            <field name="name" readonly="1"/>
                            <field name="tree_id"/>
                            <field name="field_id"/>
                            <field name="parcel_id"/>
                            <field name="row_id"/>
                        </group>
                        <group string="Xəstəlik Məlumatları">
                            <field name="detection_date"/>
                            <field name="disease_type_id"/>
                            <field name="damage_level"/>
                        </group>
                    </group>
                    <group string="Açıqlama">
                        <field name="description" placeholder="Müalicə haqqında qeydler..." nolabel="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Xəstəlik Actions -->
    <record id="farm_disease_type_action" model="ir.actions.act_window">
        <field name="name">Xəstəlik Növləri</field>
        <field name="res_model">farm.disease.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="farm_disease_record_action" model="ir.actions.act_window">
        <field name="name">Xəstəlik Qeydləri</field>
        <field name="res_model">farm.disease.record</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
