<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Ümumi Xərc Hesabatı Tree View -->
        <record id="view_farm_expense_report_tree" model="ir.ui.view">
            <field name="name">farm.expense.report.list</field>
            <field name="model">farm.expense.report</field>
            <field name="arch" type="xml">
                <list string="Xərc Hesabatı">
                    <field name="date"/>
                    <field name="expense_type"/>
                    <field name="name"/>
                    <field name="amount" sum="Cəm"/>
                    <field name="note"/>
                    <field name="year"/>
                    <field name="month"/>
                    <field name="quarter"/>
                </list>
            </field>
        </record>

        <!-- Ümumi Xərc Hesabatı Form View -->
        <record id="view_farm_expense_report_form" model="ir.ui.view">
            <field name="name">farm.expense.report.form</field>
            <field name="model">farm.expense.report</field>
            <field name="arch" type="xml">
                <form string="Xərc Təfərrüatı">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="open_original_record" type="object" 
                                    class="oe_stat_button" icon="fa-external-link"
                                    string="Əməliyyat"/>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="expense_type"/>
                                <field name="date"/>
                                <field name="amount"/>
                            </group>
                            <group>
                                <field name="year"/>
                                <field name="month"/>
                                <field name="quarter"/>
                            </group>
                        </group>
                        <group>
                            <field name="note" placeholder="Xərc haqqında əlavə məlumat..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Ümumi Xərc Hesabatı Pivot View -->
        <record id="view_farm_expense_report_pivot" model="ir.ui.view">
            <field name="name">farm.expense.report.pivot</field>
            <field name="model">farm.expense.report</field>
            <field name="arch" type="xml">
                <pivot string="Xərc Təhlili" sample="1">
                    <field name="expense_type" type="row"/>
                    <field name="year" type="col"/>
                    <field name="amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Ümumi Xərc Hesabatı Graph View -->
        <record id="view_farm_expense_report_graph" model="ir.ui.view">
            <field name="name">farm.expense.report.graph</field>
            <field name="model">farm.expense.report</field>
            <field name="arch" type="xml">
                <graph string="Xərc Qrafiki" type="bar">
                    <field name="expense_type"/>
                    <field name="amount" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Ümumi Xərc Hesabatı Action -->
        <record id="action_farm_expense_report" model="ir.actions.act_window">
            <field name="name">Xərc Hesabatı</field>
            <field name="res_model">farm.expense.report</field>
            <field name="view_mode">pivot,list,form,graph</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Xərc hesabatı
                </p>
                <p>
                    Bütün xərc növlərinin hesabatı.
                </p>
            </field>
        </record>

    </data>
</odoo>
