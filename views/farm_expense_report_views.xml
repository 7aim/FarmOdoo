<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Ümumi Xərc Hesabatı list View -->
        <record id="view_farm_expense_report_list" model="ir.ui.view">
            <field name="name">farm.expense.report.list</field>
            <field name="model">farm.expense.report</field>
            <field name="arch" type="xml">
                <list string="Ümumi Xərc Hesabatı" create="false" edit="false" delete="false">
                    <field name="date"/>
                    <field name="expense_type"/>
                    <field name="name"/>
                    <field name="amount" sum="Cəm"/>
                    <field name="year"/>
                    <field name="month"/>
                    <field name="quarter"/>
                </list>
            </field>
        </record>

        <!-- Ümumi Xərc Hesabatı Pivot View -->
        <record id="view_farm_expense_report_pivot" model="ir.ui.view">
            <field name="name">farm.expense.report.pivot</field>
            <field name="model">farm.expense.report</field>
            <field name="arch" type="xml">
                <pivot string="Xərc Təhlili">
                    <field name="expense_type" type="row"/>
                    <field name="year" type="col"/>
                    <field name="amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Ümumi Xərc Hesabatı Graph View -->
        <record id="view_farm_expense_report_graph" model="ir.ui.view">
            <field name="name">farm.expense.report.graph</field>
            <field name="model">farm.expense.report</field>
            <field name="arch" type="xml">
                <graph string="Xərc Qrafiki" type="bar">
                    <field name="expense_type"/>
                    <field name="amount" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Ümumi Xərc Hesabatı Action -->
        <record id="action_farm_expense_report" model="ir.actions.act_window">
            <field name="name">Ümumi Xərc Hesabatı</field>
            <field name="res_model">farm.expense.report</field>
            <field name="view_mode">pivot,list,graph</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Xərc hesabatı
                </p>
                <p>
                    Bütün xərc növlərinin ümumi hesabatı.
                </p>
            </field>
        </record>

    </data>
</odoo>
