<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_farm_equipment_form" model="ir.ui.view">
        <field name="name">farm.equipment.form</field>
        <field name="model">farm.equipment</field>
        <field name="arch" type="xml">
            <form string="Avadanlıq">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category"/>
                        <field name="purchase_date"/>
                        <field name="cost"/>
                        <field name="payment_method"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- list View -->
    <record id="view_farm_equipment_list" model="ir.ui.view">
        <field name="name">farm.equipment.list</field>
        <field name="model">farm.equipment</field>
        <field name="arch" type="xml">
            <list string="Avadanlıqlar">
                <field name="name"/>
                <field name="category"/>
                <field name="purchase_date"/>
                <field name="payment_method"/>
                <field name="cost"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_farm_equipment" model="ir.actions.act_window">
        <field name="name">Avadanlıqlar</field>
        <field name="res_model">farm.equipment</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
