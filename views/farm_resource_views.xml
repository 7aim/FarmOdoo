<odoo>
    <record id="view_farm_resource_list" model="ir.ui.view">
        <field name="name">farm.resource.list</field>
        <field name="model">farm.resource</field>
        <field name="arch" type="xml">
            <list string="Farm Resources">
                <field name="name"/>
                <field name="asset_type"/>
                <field name="image"/>
                <field name="note"/>
                <field name="area_id"/>
            </list>
        </field>
    </record>

    <record id="view_farm_resource_form" model="ir.ui.view">
        <field name="name">farm.resource.form</field>
        <field name="model">farm.resource</field>
        <field name="arch" type="xml">
            <form string="Farm Resource">
                <sheet>
                    <group string="Əlavə Vəsait">
                        <field name="name"/>
                        <field name="asset_type"/>
                        <field name="area_id"/>
                        <field name="note"/>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <!--field name="image" string="Şəkil önizləməsi" widget="image"/>-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Farm Resource Search View -->
    <record id="view_farm_resource_search" model="ir.ui.view">
        <field name="name">farm.resource.search</field>
        <field name="model">farm.resource</field>
        <field name="arch" type="xml">
            <search string="Vəsait Axtarış">
                <field name="name"/>
                <field name="asset_type"/>
                <field name="area_id"/>
                <separator/>
                <filter name="machinery" string="Texnikalar" domain="[('asset_type', '=', 'machinery')]"/>
                <filter name="irrigation" string="Suvarma Avadanlıqları" domain="[('asset_type', '=', 'irrigation_equipment')]"/>
                <filter name="buildings" string="Bina və Tikililər" domain="[('asset_type', '=', 'buildings')]"/>
                <filter name="movable" string="Daşınar Əmlaklar" domain="[('asset_type', '=', 'movable_property')]"/>
                <filter name="plants" string="Çoxillik Bitkilər" domain="[('asset_type', '=', 'perennial_plants')]"/>
                <separator/>
                <group expand="0" string="Qruplaşdırma">
                    <filter name="group_by_type" string="Vəsait Növü" context="{'group_by': 'asset_type'}"/>
                    <filter name="group_by_area" string="Sahə" context="{'group_by': 'area_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_farm_resource" model="ir.actions.act_window">
        <field name="name">Farm Resources</field>
        <field name="res_model">farm.resource</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_farm_tech_list" model="ir.ui.view">
        <field name="name">farm.tech.list</field>
        <field name="model">farm.tech</field>
        <field name="arch" type="xml">
            <list string="Farm Resources">
                <field name="name"/>
                <field name="image"/>
                <field name="note"/>
                <field name="area_id"/>
            </list>
        </field>
    </record>

    <record id="view_farm_tech_form" model="ir.ui.view">
        <field name="name">farm.tech.form</field>
        <field name="model">farm.tech</field>
        <field name="arch" type="xml">
            <form string="Farm Resource">
                <sheet>
                    <group string="Əlavə Vəsait">
                        <field name="name"/>
                        <field name="area_id"/>
                        <field name="note"/>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <field name="image" string="Şəkil önizləməsi" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_farm_tech" model="ir.actions.act_window">
        <field name="name">Farm Tech</field>
        <field name="res_model">farm.tech</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>