<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sort list View -->
    <record id="farm_variety_list_view" model="ir.ui.view">
        <field name="name">farm.variety.list</field>
        <field name="model">farm.variety</field>
        <field name="arch" type="xml">
            <list string="Ağac Sortları">
                <field name="code"/>
                <field name="name"/>
                <field name="fruit_type"/>
                <field name="variety_name"/>
                <field name="maturity_period"/>
                <field name="harvest_season"/>
                <field name="tree_count"/>
            </list>
        </field>
    </record>

    <!-- Sort Form View -->
    <record id="farm_variety_form_view" model="ir.ui.view">
        <field name="name">farm.variety.form</field>
        <field name="model">farm.variety</field>
        <field name="arch" type="xml">
            <form string="Ağac Sortu">
                <sheet>
                    <group>
                        <group string="Əsas Məlumatlar">
                            <field name="name" placeholder="Nar sortu"/>
                            <field name="code" readonly="1"/>
                            <field name="fruit_type"/>
                            <field name="variety_name" placeholder="Red Delicious"/>
                        </group>
                        <group string="Mövsümi Məlumatlar">
                            <field name="maturity_period"/>
                            <field name="harvest_season"/>
                            <field name="tree_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ağaclar">
                            <field name="tree_ids">
                                <list>
                                    <field name="tree_id"/>
                                    <field name="field_id"/>
                                    <field name="parcel_id"/>
                                    <field name="row_id"/>
                                    <field name="planting_date"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Sort Action -->
    <record id="farm_variety_action" model="ir.actions.act_window">
        <field name="name">Ağac Sortları</field>
        <field name="res_model">farm.variety</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
