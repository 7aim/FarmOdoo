<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Kommunal Xərclər Action -->
        <record id="action_farm_communal_expense" model="ir.actions.act_window">
            <field name="name">Kommunal Xərclər</field>
            <field name="res_model">farm.communal.expense</field>
            <field name="view_mode">list,form,pivot</field>
        </record>

        <!-- Kommunal Xərclər List View -->
        <record id="view_farm_communal_expense_list" model="ir.ui.view">
            <field name="name">farm.communal.expense.list</field>
            <field name="model">farm.communal.expense</field>
            <field name="arch" type="xml">
                <list string="Kommunal Xərclər">
                    <field name="expense_date"/>
                    <field name="field_id"/>
                    <field name="name"/>
                    <field name="communal_type"/>
                    <field name="amount" sum="Cəm"/>
                </list>
            </field>
        </record>

        <!-- Kommunal Xərclər Form View -->
        <record id="view_farm_communal_expense_form" model="ir.ui.view">
            <field name="name">farm.communal.expense.form</field>
            <field name="model">farm.communal.expense</field>
            <field name="arch" type="xml">
                <form string="Kommunal Xərc">
                    <sheet>
                        <group>
                            <group>
                                <field name="field_id"/>
                                <field name="name"/>
                                <field name="expense_date"/>
                            </group>
                            <group>
                                <field name="communal_type"/>
                                <field name="amount"/>
                            </group>
                        </group>
                        <group>
                            <field name="note" placeholder="Əlavə qeydlər..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Kommunal Xərclər Pivot View -->
        <record id="view_farm_communal_expense_pivot" model="ir.ui.view">
            <field name="name">farm.communal.expense.pivot</field>
            <field name="model">farm.communal.expense</field>
            <field name="arch" type="xml">
                <pivot string="Kommunal Xərclər Pivot">
                    <field name="expense_date" type="row"/>
                    <field name="communal_type" type="row"/>
                    <field name="amount" type="measure"/>
                </pivot>
            </field>
        </record>

    </data>
</odoo>
