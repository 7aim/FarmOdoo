<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cərgə list View -->
    <record id="farm_row_list_view" model="ir.ui.view">
        <field name="name">farm.row.list</field>
        <field name="model">farm.row</field>
        <field name="arch" type="xml">
            <list string="Cərgələr">
                <field name="code"/>
                <field name="name"/>
                <field name="field_id"/>
                <field name="parcel_id"/>
                <field name="row_variety"/>
                <field name="max_trees"/>
                <field name="tree_count"/>
            </list>
        </field>
    </record>

    <!-- Cərgə Form View -->
    <record id="farm_row_form_view" model="ir.ui.view">
        <field name="name">farm.row.form</field>
        <field name="model">farm.row</field>
        <field name="arch" type="xml">
            <form string="Cərgə">
                <sheet>
                    <group>
                        <group string="Əsas Məlumatlar">
                            <field name="name" placeholder="Nar cərgəsi"/>
                            <field name="code" readonly="1"/>
                            <field name="field_id" readonly="1"/>
                            <field name="parcel_id"/>
                        </group>
                        <group string="Ağac Məlumatları">
                            <field name="row_variety"/>
                            <field name="length_meter"/>
                            <field name="tree_spacing"/>
                            <field name="max_trees"/>
                            <field name="tree_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ağaclar">
                            <field name="tree_ids" context="{'default_row_id': id}">
                                <list>
                                    <field name="tree_id"/>
                                    <field name="variety_id"/>
                                    <field name="planting_date"/>
                                    <field name="season_count"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <group string="Açıqlama">
                        <field name="description" placeholder="Cərgə haqqında qeydlər..." nolabel="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Cərgə Action -->
    <record id="farm_row_action" model="ir.actions.act_window">
        <field name="name">Cərgələr</field>
        <field name="res_model">farm.row</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
