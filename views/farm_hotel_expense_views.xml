<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Otel Xərclər Action -->
        <record id="action_farm_hotel_expense" model="ir.actions.act_window">
            <field name="name">Otel Xərclər</field>
            <field name="res_model">farm.hotel.expense</field>
            <field name="view_mode">list,form,pivot</field>
        </record>

        <!-- Otel Xərclər List View -->
        <record id="view_farm_hotel_expense_list" model="ir.ui.view">
            <field name="name">farm.hotel.expense.list</field>
            <field name="model">farm.hotel.expense</field>
            <field name="arch" type="xml">
                <list string="Otel Xərclər">
                    <field name="expense_date"/>
                    <field name="field_id"/>
                    <field name="name"/>
                    <field name="hotel_name"/>
                    <field name="amount" sum="Cəm"/>
                </list>
            </field>
        </record>

        <!-- Otel Xərclər Form View -->
        <record id="view_farm_hotel_expense_form" model="ir.ui.view">
            <field name="name">farm.hotel.expense.form</field>
            <field name="model">farm.hotel.expense</field>
            <field name="arch" type="xml">
                <form string="Otel Xərc">
                    <sheet>
                        <group>
                            <group>
                                <field name="field_id"/>
                                <field name="name"/>
                                <field name="expense_date"/>
                                <field name="hotel_name"/>
                                <field name="amount"/>
                            </group>
                        </group>
                        <group>
                            <field name="note" placeholder="Əlavə qeydlər..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Otel Xərclər Pivot View -->
        <record id="view_farm_hotel_expense_pivot" model="ir.ui.view">
            <field name="name">farm.hotel.expense.pivot</field>
            <field name="model">farm.hotel.expense</field>
            <field name="arch" type="xml">
                <pivot string="Otel Xərclər Pivot">
                    <field name="expense_date" type="row"/>
                    <field name="hotel_name" type="row"/>
                    <field name="amount" type="measure"/>
                </pivot>
            </field>
        </record>

    </data>
</odoo>
