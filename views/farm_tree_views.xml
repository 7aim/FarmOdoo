<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ağac list View -->
    <record id="farm_list_list_view" model="ir.ui.view">
        <field name="name">farm.tree.list</field>
        <field name="model">farm.tree</field>
        <field name="arch" type="xml">
            <list string="Ağaclar">
                <field name="tree_id"/>
                <field name="name"/>
                <field name="field_id"/>
                <field name="parcel_id"/>
                <field name="row_id"/>
                <field name="season_count"/>
                <field name="variety_id"/>
                <field name="sort_id"/>
                <field name="rootstock"/>
                <field name="planting_date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Ağac Form View -->
    <record id="farm_list_form_view" model="ir.ui.view">
        <field name="name">farm.tree.form</field>
        <field name="model">farm.tree</field>
        <field name="arch" type="xml">
            <form string="Ağac">
                <header>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group string="Yer Seçimi">
                            <field name="field_id"/>
                            <field name="parcel_id" domain="[('field_id', '=', field_id)]"/>
                            <field name="row_id" domain="[('parcel_id', '=', parcel_id)]"/>
                        </group>
                        <group string="Ağac Məlumatları">
                            <field name="name"/>
                            <field name="tree_id"/>
                            <field name="variety_id"/>
                            <field name="sort_id"/>
                            <field name="rootstock"/>
                            <field name="planting_date"/>
                            <field name="season_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Xəstəlik Tarixçəsi">
                            <field name="disease_ids">
                                <list>
                                    <field name="disease_type_id"/>
                                    <field name="detection_date"/>
                                    <field name="damage_level"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <group string="Açıqlama">
                        <field name="description" placeholder="Ağac haqqında qeydlər..." nolabel="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Ağac Action -->
    <record id="farm_tree_action" model="ir.actions.act_window">
        <field name="name">Ağaclar</field>
        <field name="res_model">farm.tree</field>
        <field name="view_mode">list,kanban,form</field>
    </record>
</odoo>
