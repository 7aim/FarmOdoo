<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Product Template Form View Extension -->
        <record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <!-- İstehsalçı məlumatları üçün yeni notebook page -->
                <xpath expr="//notebook" position="inside">
                    <page string="İstehsalçı Məlumatları" name="manufacturer_info">
                        <group>
                            <group string="İstehsalçı">
                                <field name="manufacturer_country_id"/>
                                <field name="manufacturer_company"/>
                                <field name="registration_number"/>
                            </group>
                            <group string="Məhsul Xüsusiyyətləri">
                                <field name="active_ingredient_id"/>
                                <field name="active_ingredient" readonly="1"/>
                                <field name="concentration"/>
                                <field name="expiry_months"/>
                                <field name="is_universal" string="Universal Məhsul (All)"/>
                            </group>
                        </group>
                        <group string="Saxlama Şəraiti">
                            <field name="storage_conditions" placeholder="Saxlama şərtlərini qeyd edin (temperatur, rütubət və s.)..."/>
                        </group>
                    </page>
                </xpath>
                
                <!-- Ümumi məlumatlar səhifəsində də əsas sahələri göstər -->
                <xpath expr="//group[@name='group_general']" position="after">
                </xpath>
            </field>
        </record>

        <!-- Product Template Search View Extension -->
        <record id="product_template_search_view_inherit" model="ir.ui.view">
            <field name="name">product.template.search.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <!-- Sadə filtr əlavə et -->
                <xpath expr="//search" position="inside">
                    <separator/>
                    <filter name="with_manufacturer" string="İstehsalçısı Olan" domain="[('manufacturer_company', '!=', False)]"/>
                    <filter name="universal_products" string="Universal Məhsullar (All)" domain="[('is_universal', '=', True)]"/>
                </xpath>
            </field>
        </record>

        <!-- Product Product Form View Extension -->
        <record id="product_normal_form_view_inherit" model="ir.ui.view">
            <field name="name">product.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <!-- Product variant formunda da sahələri göstər -->
                <xpath expr="//notebook" position="inside">
                    <page string="İstehsalçı Məlumatları" name="manufacturer_info">
                        <group>
                            <group string="İstehsalçı">
                                <field name="manufacturer_country_id"/>
                                <field name="manufacturer_company"/>
                                <field name="registration_number"/>
                            </group>
                            <group string="Məhsul Xüsusiyyətləri">
                                <field name="active_ingredient"/>
                                <field name="concentration"/>
                                <field name="expiry_months"/>
                            </group>
                        </group>
                        <group string="Saxlama Şəraiti">
                            <field name="storage_conditions" placeholder="Saxlama şərtlərini qeyd edin..."/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
