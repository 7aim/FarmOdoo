    <record id="farm_plowing_form_view" model="ir.ui.view">
        <field name="name">farm.plowing.form</field>
        <field name="model">farm.plowing</field>
        <field name="arch" type="xml">
            <form string="Şumlama">
                <sheet>
                    <group>
                        <group string="Əsas Məlumatlar">
                            <field name="name"/>
                            <field name="operation_date"/>
                            <field name="field_id"/>
                            <field name="parcel_id"/>
                            <field name="row_id"/>
                        </group>
                        <group string="Texniki Məlumatlar">
                            <field name="plowing_depth"/>
                            <field name="area_hectare"/>
                            <field name="equipment"/>
                            <field name="operator_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="İşçi Xərcləri" name="worker_costs">
                            <field name="worker_line_ids">
                                <list editable="bottom">
                                    <field name="worker_id"/>
                                    <field name="hours_worked"/>
                                    <field name="hourly_rate"/>
                                    <field name="amount" sum="Cəmi Xərc" readonly="1"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_worker_cost"/>
                            </group>
                        </page>
                        <page string="Qeydlər">
                            <field name="notes" placeholder="Şumlama haqqında əlavə məlumatlar..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
