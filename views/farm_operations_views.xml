    <!-- Şumlama Views -->
    <record id="farm_plowing_list_view" model="ir.ui.view">
        <field name="name">farm.plowing.list</field>
        <field name="model">farm.plowing</field>
        <field name="arch" type="xml">
            <list string="Şumlama Əməliyyatları">
                <field name="name"/>
                <field name="field_id"/>
                <field name="parcel_id"/>
                <field name="row_id"/>
                <field name="equipment"/>
                <field name="operator_id"/>
                <field name="plowing_depth"/>
                <field name="area_hectare"/>
