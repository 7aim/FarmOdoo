<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Row Wizard Form View -->
    <record id="view_farm_row_wizard_form" model="ir.ui.view">
        <field name="name">farm.row.wizard.form</field>
        <field name="model">farm.row.wizard</field>
        <field name="arch" type="xml">
            <form string="Cərgə Yaratma Sihirbazı">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <i class="fa fa-seedling" style="color: #28a745;"/>
                            <span> Cərgə Yaratma Sihirbazı</span>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="field_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="parcel_id" options="{'no_create': True, 'no_edit': True}"/>
                        </group>
                    </group>
                    
                    <separator string="Yaratma Üsulu"/>
                    <group>
                        <field name="creation_method" widget="radio"/>
                    </group>
                    
                    <!-- Tək Cərgə -->
                    <group string="Tək Cərgə Məlumatları" invisible="creation_method != 'single'">
                        <field name="single_name" placeholder="Məsələn: Cərgə1" required="creation_method == 'single'"/>
                    </group>
                    
                    <!-- Çoxlu Cərgə -->
                    <group string="Çoxlu Cərgə Məlumatları" invisible="creation_method != 'multiple'">
                        <group>
                            <field name="name_prefix" placeholder="Məsələn: Cərgə" required="creation_method == 'multiple'"/>
                            <field name="start_number"/>
                        </group>
                        <group>
                            <field name="count"/>
                            <div style="font-style: italic; color: #666; padding-top: 5px;">
                                Nəticə: Cərgə1, Cərgə2, ... kimi adlar yaradılacaq
                            </div>
                        </group>
                    </group>
                    
                    <!-- Aralıq -->
                    <group string="Aralıq Cərgə Məlumatları" invisible="creation_method != 'range'">
                        <group>
                            <field name="range_prefix" placeholder="Məsələn: C" required="creation_method == 'range'"/>
                            <field name="range_start"/>
                        </group>
                        <group>
                            <field name="range_end"/>
                            <div style="font-style: italic; color: #666; padding-top: 5px;">
                                Nəticə: C1, C2, C3, ... C10 kimi adlar yaradılacaq
                            </div>
                        </group>
                    </group>
                    
                    <separator string="Cərgə Məlumatları"/>
                    <group>
                        <group>
                            <field name="length_meter"/>
                            <field name="tree_spacing"/>
                        </group>
                        <group>
                            <field name="variety_id" options="{'no_create': True}"/>
                            <field name="description"/>
                        </group>
                    </group>
                    
                    <separator string="Ağac Yaratma (İstəyə görə)"/>
                    <group>
                        <field name="create_trees"/>
                    </group>
                    <group invisible="create_trees == False">
                        <group>
                            <field name="trees_per_row" required="create_trees == True"/>
                            <field name="tree_variety_id" required="create_trees == True" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_create_rows" string="Cərgələri Yarat" type="object" class="btn-primary"/>
                    <button string="Ləğv et" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for Row Wizard -->
    <record id="action_farm_row_wizard" model="ir.actions.act_window">
        <field name="name">Cərgə Yaratma Sihirbazı</field>
        <field name="res_model">farm.row.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_farm_row_wizard_form"/>
    </record>
</odoo>