<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Farm Reporting list View -->
    <record id="view_farm_reporting_list" model="ir.ui.view">
        <field name="name">farm.reporting.list</field>
        <field name="model">farm.reporting</field>
        <field name="arch" type="xml">
            <list string="Kənd Təsərrüfatı Hesabatlıq" create="false" edit="false">
                <field name="operation_date"/>
                <field name="operation_type"/>
                <field name="operation_name"/>
                <field name="field_name"/>
                <field name="parcel_name"/>
                <field name="worker_name"/>
                <field name="vendor_name"/>
                <field name="total_cost" sum="Ümumi Xərc"/>
                <field name="worker_cost" sum="İşçi Xərci"/>
                <field name="material_cost" sum="Material Xərci"/>
                <field name="additional_cost" sum="Əlavə Xərc"/>
                <field name="expense_category"/>
                <field name="year"/>
                <field name="month"/>
            </list>
        </field>
    </record>

    <!-- Farm Reporting Pivot View -->
    <record id="view_farm_reporting_pivot" model="ir.ui.view">
        <field name="name">farm.reporting.pivot</field>
        <field name="model">farm.reporting</field>
        <field name="arch" type="xml">
            <pivot string="Hesabatlıq Analizi" sample="1">
                <field name="operation_type" type="row"/>
                <field name="field_name" type="row"/>
                <field name="year" type="col"/>
                <field name="month" type="col"/>
                <field name="total_cost" type="measure"/>
                <field name="worker_cost" type="measure"/>
                <field name="material_cost" type="measure"/>
                <field name="additional_cost" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Farm Reporting Graph View -->
    <record id="view_farm_reporting_graph" model="ir.ui.view">
        <field name="name">farm.reporting.graph</field>
        <field name="model">farm.reporting</field>
        <field name="arch" type="xml">
            <graph string="Xərc Analizi" type="bar" sample="1">
                <field name="operation_type"/>
                <field name="total_cost" type="measure"/>
                <field name="worker_cost" type="measure"/>
                <field name="material_cost" type="measure"/>
                <field name="additional_cost" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Farm Reporting Search View -->
    <record id="view_farm_reporting_search" model="ir.ui.view">
        <field name="name">farm.reporting.search</field>
        <field name="model">farm.reporting</field>
        <field name="arch" type="xml">
            <search string="Hesabatlıq Axtarışı">
                <field name="operation_type"/>
                <field name="field_name"/>
                <field name="worker_name"/>
                <field name="vendor_name"/>
                <field name="operation_date"/>
                
                <filter string="Bu Ay" name="this_month" 
                        domain="[('operation_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01')),
                                ('operation_date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <filter string="Bu İl" name="this_year" 
                        domain="[('operation_date', '&gt;=', context_today().strftime('%Y-01-01')),
                                ('operation_date', '&lt;=', context_today().strftime('%Y-12-31'))]"/>
                <filter string="Son 30 Gün" name="last_30_days" 
                        domain="[('operation_date', '&gt;=', (context_today() - relativedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                
                <separator/>
                <filter string="Əməliyyat Xərcləri" name="operational" domain="[('expense_category', '=', 'operational')]"/>
                <filter string="Material Xərcləri" name="material" domain="[('expense_category', '=', 'material')]"/>
                <filter string="İşçi Xərcləri" name="labor" domain="[('expense_category', '=', 'labor')]"/>
                <filter string="Nəqliyyat Xərcləri" name="transport" domain="[('expense_category', '=', 'transport')]"/>
                <filter string="Yanacaq Xərcləri" name="fuel" domain="[('expense_category', '=', 'fuel')]"/>
                
                <separator/>
                <group expand="1" string="Qruplaşdırma">
                    <filter string="Əməliyyat Növü" name="group_operation_type" context="{'group_by': 'operation_type'}"/>
                    <filter string="Sahə" name="group_field" context="{'group_by': 'field_name'}"/>
                    <filter string="İşçi" name="group_worker" context="{'group_by': 'worker_name'}"/>
                    <filter string="Təchizatçı" name="group_vendor" context="{'group_by': 'vendor_name'}"/>
                    <filter string="Tarix (Ay)" name="group_month" context="{'group_by': 'operation_date:month'}"/>
                    <filter string="Tarix (İl)" name="group_year" context="{'group_by': 'operation_date:year'}"/>
                    <filter string="Xərc Kateqoriyası" name="group_expense_category" context="{'group_by': 'expense_category'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Farm Reporting Action -->
    <record id="action_farm_reporting" model="ir.actions.act_window">
        <field name="name">Ümumi Hesabatlıq</field>
        <field name="res_model">farm.reporting</field>
        <field name="view_mode">list,pivot,graph</field>
        <field name="context">{'search_default_this_year': 1}</field>
        <field name="search_view_id" ref="view_farm_reporting_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Hesabatlıq məlumatları
            </p>
            <p>
                Bu səhifədə bütün əməliyyatların, xərclərin və satınalmaların ümumi hesabatlığını görə bilərsiniz.
            </p>
        </field>
    </record>

