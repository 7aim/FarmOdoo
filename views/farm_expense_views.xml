<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Kommunal Xərcləri list View -->
        <record id="view_farm_communal_expense_list" model="ir.ui.view">
            <field name="name">farm.communal.expense.list</field>
            <field name="model">farm.communal.expense</field>
            <field name="arch" type="xml">
                <list string="Kommunal Xərcləri">
                    <field name="expense_date"/>
                    <field name="name"/>
                    <field name="communal_type"/>
                    <field name="amount" sum="Total"/>
                    <field name="note"/>
                </list>
            </field>
        </record>

        <!-- Kommunal Xərcləri Form View -->
        <record id="view_farm_communal_expense_form" model="ir.ui.view">
            <field name="name">farm.communal.expense.form</field>
            <field name="model">farm.communal.expense</field>
            <field name="arch" type="xml">
                <form string="Kommunal Xərci">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="expense_date"/>
                                <field name="communal_type"/>
                                <field name="amount"/>
                            </group>
                        </group>
                        <group>
                            <field name="note" placeholder="Əlavə qeydlər..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Kommunal Xərcləri Action -->
        <record id="action_farm_communal_expense" model="ir.actions.act_window">
            <field name="name">Kommunal Xərcləri</field>
            <field name="res_model">farm.communal.expense</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Kommunal xərci əlavə edin
                </p>
                <p>
                    Elektrik, su, qaz və digər kommunal xərclərinizi qeyd edin.
                </p>
            </field>
        </record>

