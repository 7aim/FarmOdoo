<odoo>
    <record id="view_farm_document_list" model="ir.ui.view">
        <field name="name">farm.document.list</field>
        <field name="model">farm.document</field>
        <field name="arch" type="xml">
            <list string="Farm Documents">
                <field name="name"/>
                <field name="image"/>
                <field name="note"/>
                <field name="area_id"/>
            </list>
        </field>
    </record>

    <record id="view_farm_document_form" model="ir.ui.view">
        <field name="name">farm.document.form</field>
        <field name="model">farm.document</field>
        <field name="arch" type="xml">
            <form string="Farm Documents">
                <sheet>
                    <group string="Sənəd Məlumatları">
                        <field name="name"/>
                        <field name="area_id"/>
                        <field name="note"/>
                        <field name="image" class="oe_avatar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_farm_document" model="ir.actions.act_window">
        <field name="name">Farm Documents</field>
        <field name="res_model">farm.document</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="farm_documents_menu" name="Farm Documents" parent="farm_main_menu" action="action_farm_document" sequence="100"/>
</odoo>